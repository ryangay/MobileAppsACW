<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.labs.acw">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Puzzles.PuzzleListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PuzzleDetail.PuzzleDetailActivity"
            android:label="@string/title_activity_puzzle_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Arena.ArenaActivity"
            android:exported="true"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_arena"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>